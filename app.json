{
  "expo": {
    "name": "Mirrage",
    "slug": "mirrage",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0C0E1A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lovemix.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Mirrage需要访问您的相册以保存生成的图片",
        "NSCameraUsageDescription": "Mirrage需要访问相机以拍摄照片",
        "NSPhotoLibraryAddUsageDescription": "Mirrage需要访问您的相册以保存生成的图片"
      }
    },
    "android": {
      "package": "com.lovemix.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0C0E1A"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-font",
      "@react-native-community/datetimepicker",
      "expo-video"
    ]
  }
}
